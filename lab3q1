	<body>
	<!-- 	-->		
		<div id="outputArea"></div>


		<script>
			//PASTE YOUR CODE BELOW THIS LINE
            var target = document.getElementById("outputArea");
            var outString = "";
            
            var radius, area, circumference, ratio;
            radius = 1;
            area = Math.PI * Math.pow(radius, 2);
            circumference = 2 * Math.PI * radius;
            ratio = area / circumference;
            while(ratio<30){
                outString += radius + ". " + ratio + "<br/>";
                
                radius++;
                area = Math.PI * Math.pow(radius, 2);
                circumference = 2 * Math.PI * radius;
                ratio = area / circumference;
            }
            
            target.innerHTML = outString;
		</script>
